<div class="container">
    
    <div class="jumbotron">
        <h1 class="display-3">Eat Some Burgers</h1>
        <p class="lead">Jumbo helper text</p>
        <hr class="my-2">
        <p>Create a Burger. Eat a Burger.</p>
        <h2>Create your Burger</h2>
        <panel>
            <form class="create-form">
                <div class="form-group">
                  <label for="newburger">Order a Burger</label>
                  {{!--<input type"text" id="newburger" name="burger"> --}}
                  <select data-placeholer="" id="newburger" name="burger">
                      <option value="Nothing Selected" selected>Please Select a Sandwich</option>
                      <option value="Hamburger">Hamburger</option>
                      <option value="CheeseBurger">CheeseBurger</option>
                      <option value="DoubleChzBurger">Double Cheese Burger</option>
                      <option value="VeggieBurger">Veggie Burger</option>
                      <option value="SpicyChicken">Spicy chicken</option>
                      <option value="BigMick">The Big Mick</option>
                      <option value="MiniChz">Mini CheeseBurgers</option>
                  </select>

                  <button type="submit" class="btn btn-success" id="addburger">
                      <span class="fa fa-thumbs up"></span>
                  </button>
                </div>
            </form>
        </panel>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="leftside"><strong>Order Your Burger</strong>
                    <p>Send order when you're ready</p>
                </div>
                <div class="panel-body">

                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}

                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-usd"></span></button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>

                </div>
            </div>
        </div>
    <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="rightside"><strong>Burger is Ready!</strong>
                    <p>Pick up your Burger</p>
                </div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>



                </div>
            </div>
        </div>

    </div>
    <!--endrow -->
    </div>
    <!--enccontainer -->